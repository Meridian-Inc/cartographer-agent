{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cartographer Agent",
  "version": "2.1.0",
  "identifier": "dev.cartographer.agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cartographer Agent",
        "label": "main",
        "width": 800,
        "height": 700,
        "resizable": false,
        "fullscreen": false,
        "minimizable": true,
        "maximizable": false,
        "closable": true,
        "visible": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Network monitoring agent for Cartographer Cloud",
    "longDescription": "Monitor your local network and sync device information with Cartographer Cloud",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1",
          "librsvg2-2"
        ]
      }
    },
    "windows": {
      "nsis": {
        "headerImage": "header.bmp",
        "sidebarImage": "sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false,
        "installerHooks": "installer/nsis-hooks.nsi"
      }
    },
    "macOS": {
      "signingIdentity": "-",
      "entitlements": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI1NkFFRUZENkNCQ0ExNDAKUldSQW9ieHMvZTVxSlN3Q3NBRVZMcDM1ZkZ3QlMvSGQ4TGpIRUJzNXF1MmdlTnVHVkJmZXpmeVcK",
      "endpoints": [
        "https://github.com/Meridian-Inc/cartographer-agent/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
