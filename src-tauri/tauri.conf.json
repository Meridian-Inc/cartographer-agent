{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cartographer Agent",
  "version": "1.2.0",
  "identifier": "dev.cartographer.agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cartographer Agent",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Network monitoring agent for Cartographer Cloud",
    "longDescription": "Monitor your local network and sync device information with Cartographer Cloud",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1",
          "librsvg2-2"
        ]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
